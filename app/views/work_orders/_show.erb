<p id="notice"><%= notice %></p>

<h1>Listing Work Orders</h1>

<table>
  <thead>
    <tr>
      <th>Employee</th>
      <th>Job</th>
      <th>Final price</th>
      <th>Notes</th>
      <th>Complete</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @work_orders = WorkOrder.all %>
    <% @work_orders.each do |work_order| %>
      <tr>
        <td><%#= work_order.employee_id %></td>
        <td><%= work_order.job_id %></td>
        <td><%= work_order.final_price %></td>
        <td><%= work_order.notes %></td>
        <td><%= work_order.complete %></td>
        <td><%= link_to 'Show', work_order %></td>
        <td><%= link_to 'Edit', edit_work_order_path(work_order) %></td>
        <td><%= link_to 'Destroy', work_order, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

